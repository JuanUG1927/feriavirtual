<div class="col-md-4 col-sm-4 col-xs-12">
                           
    <div class="single-shop-item">
        <div class="img-holder">
            <img src="{{ file_url(fields.uri.content|striptags|trim) }}" alt="{{fields.title.content}}">
            {{ kint(fields.field_new.content) }}
             {% if fields.field_new.content == 'New' %}
            <div class="new-item">
                <p>{{ fields.field_new.content }}</p>
            </div>
                {% endif %}

            <div class="overlay">
                <div class="box">
                    <div class="content">
                        {{fields.add_to_cart.content}}
                    </div>
                </div>
            </div>
        </div>
        <div class="title-holder">
            <div class="top clearfix">
                <div class="product-title pull-left">
                    <h5>{{fields.title.content}}</h5>
                </div>
                <div class="review-box pull-right">
                    {{fields.field_star_rating .content}}
                </div>
            </div>
            <h4>{{fields.price.content}}<del class="before-rate">{{fields.field_old_price.content}}</del></h4>
        </div>
    </div>
</div>









